<Window x:Class="FoodTruckWpf.InputTextBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Question" Height="155" Width="336">
   <Grid>
      <TextBox x:Name="truckNameTextBox" Height="21" Margin="10,59,10,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
      <Button x:Name="okButton" Content="Ok" HorizontalAlignment="Left" Margin="10,94,0,0" VerticalAlignment="Top" Width="75" Click="okButton_Click" IsDefault="True"/>
      <Button x:Name="cancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="90,94,0,0" VerticalAlignment="Top" Width="75" Click="cancelButton_Click"/>
      <Label x:Name="messageLabel" Content="" Margin="10,10,10,70" VerticalAlignment="Bottom" Height="44"/>

   </Grid>
</Window>
